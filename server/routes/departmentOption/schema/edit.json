{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "The Root Schema",
  "required": [
    "name",
    "department_id"
  ],
  "properties": {
    "name": {
      "$id": "#/properties/name",
      "type": "string",
      "title": "The Name Schema",
      "default": "",
      "examples": [
        "Trading"
      ],
      "pattern": "^(.*)$"
    },
    "department_id": {
      "$id": "#/properties/department_id",
      "type": "integer",
      "title": "The Department_id Schema",
      "default": "",
      "examples": [
        "1"
      ]
    }
  }
}